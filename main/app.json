{
  "expo": {
    "name": "Visitor Check-In",
    "slug": "visitor-check-in",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "visitormanagement",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Professional visitor management system with QR code check-in functionality. Streamline visitor registration, tracking, and security for your organization.",
    "primaryColor": "#E6F4FE",
    "ios": {
      "supportsTablet": true,
      "googleServicesFile": "./GoogleService-Info.plist",
      "bundleIdentifier": "com.visitormanagement"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "googleServicesFile": "./google-services.json",
      "package": "com.visitormanagement",
      "permissions": [
        "android.permission.CAMERA"
      ],
      "privacyPolicy": "https://your-domain.com/privacy-policy",
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.visitormanagement"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow camera access to scan QR codes.",
          "microphonePermission": false,
          "recordAudioAndroid": false
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.234537435099-cpea3c79v7md1mclvgqcc8bmsj6krb4n"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "useModularHeaders": true
          },
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0",
            "minSdkVersion": 24
          }
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "847fccff-a8c4-44a3-b00d-fe31fc84c05f"
      }
    },
    "hooks": {
      "postPublish": []
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "owner": "webagency"
  }
}
