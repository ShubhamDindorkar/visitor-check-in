rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /visitor_photos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.token.role == 'receptionist' || request.auth.token.role == 'admin');
    }

    match /host_avatars/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.token.role == 'admin' || request.auth.uid == request.auth.token.uid);
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
